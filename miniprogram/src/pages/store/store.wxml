<view class="top">
  <view class="top-icon">
    <van-icon name="shop-o" />
  </view>
  <view class="top-info">
    <view>{{store.name}}</view>
    <view><van-icon name="location-o" /><text>海南省三亚市吉阳区育才路1号</text></view>
    <view><text>2个商品 </text><text> 0人订阅</text></view>
  </view>
  <view class="top-btn">
    <van-tag color="#2A82E4" plain size="large">+ 订阅</van-tag>
    <van-tag color="#2A82E4" plain size="large" bindtap="goto">到店</van-tag>
  </view>
</view>

<van-tabs active="{{ active }}">
  <!-- <van-tab title="首页"><van-empty description="首页内容为空" /></van-tab> -->
  <van-tab title="全部商品">

        <view class="goodsList" >
        <navigator class="goodsbox" wx:for="{{goodsList}}" wx:key="index" url="../detail/detail?gid={{item.gid}}">
          <image src="{{item.image}}" mode="heightFix"></image>
          <view class="goodsdes">
            <text>{{item.name}}</text>
            <text>￥{{item.price}}</text>
            <van-tag color="#10872A" text-color="#ffffff" round size="medium">该信息由开发者提供</van-tag>
          </view>
            </navigator>
        </view>

  </van-tab>
  <!-- <van-tab title="分类"><van-empty description="分类页还没写" /></van-tab> -->
  <van-tab title="店铺简介">
    <view class="hello">
      <text>商店发布者：开发者</text>
      <text>发布者留言：黑超</text>
      <text>店铺发布时间：2023.4.20 10:20</text>
      <text>最后修改时间：2023.4.20 10:20</text>
    </view>
  </van-tab>
</van-tabs>
